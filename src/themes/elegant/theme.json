{
  "id": "elegant",
  "name": "Elegant Pearl",
  "colors": {
    "bg": "#f8f9fa",
    "fg": "#2d3748",
    "primary": "#553c9a",
    "primaryFg": "#ffffff",
    "secondary": "#805ad5",
    "secondaryFg": "#ffffff",
    "muted": "#edf2f7",
    "mutedFg": "#718096",
    "success": "#38a169",
    "warning": "#d69e2e",
    "danger": "#e53e3e",
    "info": "#3182ce",
    "border": "#e2e8f0"
  },
  "radii": {
    "sm": "8px",
    "md": "16px",
    "lg": "24px",
    "xl": "32px"
  },
  "spacing": {
    "xs": "4px",
    "sm": "10px",
    "md": "16px",
    "lg": "24px",
    "xl": "32px"
  },
  "typography": {
    "fontFamily": "'Noto Sans Arabic', 'Libre Baskerville', 'serif'",
    "baseSize": 16,
    "lineHeight": 1.6,
    "weight": {
      "normal": 400,
      "medium": 500,
      "bold": 700
    }
  },
  "three": {
    "background": "#faf9f7",
    "camera": {
      "position": [0, 1.3, 3.5],
      "fov": 42
    },
    "lights": [
      { "type": "ambient", "intensity": 0.75 },
      { "type": "directional", "intensity": 1.1, "position": [2.5, 3, 2], "color": "#f7fafc" },
      { "type": "spot", "intensity": 0.8, "position": [-2, 2.5, 1.5], "color": "#805ad5" }
    ],
    "model": {
      "example": "diamond",
      "scale": [1.2, 1.2, 1.2],
      "position": [0, -0.05, 0],
      "rotation": [0, 30, 0],
      "autoRotate": true,
      "rotationSpeed": 0.25
    },
    "effects": {
      "bloom": { "enabled": true, "intensity": 0.7 },
      "fog": { "color": "#faf9f7", "near": 5, "far": 16 },
      "shadow": { "enabled": true, "bias": -0.0004, "mapSize": [1536, 1536], "radius": 2.5 }
    }
  },
  "components": {
    "button": {
      "radius": "lg",
      "height": 44,
      "paddingX": "1.75rem",
      "variants": ["solid", "outline", "ghost"]
    },
    "card": {
      "radius": "xl",
      "shadow": "0 10px 25px rgba(85, 60, 154, 0.1)"
    },
    "input": { "radius": "lg" },
    "badge": { "radius": "md" }
  }
}