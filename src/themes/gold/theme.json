{
  "id": "gold",
  "name": "Royal Gold",
  "colors": {
    "bg": "#1a1611",
    "fg": "#faf8f1",
    "primary": "#ffd700",
    "primaryFg": "#1a1400",
    "secondary": "#b8860b",
    "secondaryFg": "#ffffff",
    "muted": "#2a2318",
    "mutedFg": "#d4c5a9",
    "success": "#32d74b",
    "warning": "#ff9f0a",
    "danger": "#ff453a",
    "info": "#64d2ff",
    "border": "#3d3426"
  },
  "radii": {
    "sm": "10px",
    "md": "16px",
    "lg": "24px",
    "xl": "32px"
  },
  "spacing": {
    "xs": "6px",
    "sm": "12px",
    "md": "18px",
    "lg": "24px",
    "xl": "36px"
  },
  "typography": {
    "fontFamily": "'Noto Sans Arabic', 'Cinzel', 'serif'",
    "baseSize": 17,
    "lineHeight": 1.65,
    "weight": {
      "normal": 400,
      "medium": 600,
      "bold": 700
    }
  },
  "three": {
    "background": "#151209",
    "camera": {
      "position": [0, 1.5, 3.2],
      "fov": 38
    },
    "lights": [
      { "type": "ambient", "intensity": 0.6 },
      { "type": "directional", "intensity": 1.4, "position": [2, 3.5, 2], "color": "#fff4b3" },
      { "type": "spot", "intensity": 1.2, "position": [-1.5, 3, 1.5], "color": "#ffd700" },
      { "type": "point", "intensity": 0.8, "position": [1.5, 1, -1], "color": "#b8860b" }
    ],
    "model": {
      "example": "crown",
      "scale": [1.1, 1.1, 1.1],
      "position": [0, -0.3, 0],
      "rotation": [0, 45, 0],
      "autoRotate": true,
      "rotationSpeed": 0.2
    },
    "effects": {
      "bloom": { "enabled": true, "intensity": 1.3 },
      "fog": { "color": "#151209", "near": 4, "far": 15 },
      "shadow": { "enabled": true, "bias": -0.0002, "mapSize": [2048, 2048], "radius": 4 }
    }
  },
  "components": {
    "button": {
      "radius": "xl",
      "height": 50,
      "paddingX": "2rem",
      "variants": ["solid", "outline", "ghost"]
    },
    "card": {
      "radius": "xl",
      "shadow": "0 20px 50px rgba(255, 215, 0, 0.2)"
    },
    "input": { "radius": "lg" },
    "badge": { "radius": "lg" }
  }
}