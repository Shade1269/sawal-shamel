{
  "id": "night",
  "name": "Night Mode",
  "colors": {
    "bg": "#0a0a0a",
    "fg": "#f5f5f5",
    "primary": "#bb86fc",
    "primaryFg": "#121212",
    "secondary": "#03dac6",
    "secondaryFg": "#000000",
    "muted": "#1f1f1f",
    "mutedFg": "#a0a0a0",
    "success": "#00c853",
    "warning": "#ffab00",
    "danger": "#ff1744",
    "info": "#00b0ff",
    "border": "#333333"
  },
  "radii": {
    "sm": "8px",
    "md": "12px",
    "lg": "18px",
    "xl": "26px"
  },
  "spacing": {
    "xs": "4px",
    "sm": "10px",
    "md": "16px",
    "lg": "22px",
    "xl": "30px"
  },
  "typography": {
    "fontFamily": "'Noto Sans Arabic', 'Orbitron', 'monospace'",
    "baseSize": 15,
    "lineHeight": 1.5,
    "weight": {
      "normal": 400,
      "medium": 500,
      "bold": 700
    }
  },
  "three": {
    "background": "#000000",
    "camera": {
      "position": [0, 1.5, 3.8],
      "fov": 44
    },
    "lights": [
      { "type": "ambient", "intensity": 0.4 },
      { "type": "directional", "intensity": 1.4, "position": [2.2, 3.0, 1.8], "color": "#bb86fc" },
      { "type": "point", "intensity": 1.2, "position": [-1.8, 2.5, 1.3], "color": "#03dac6" }
    ],
    "model": {
      "example": "crystal",
      "scale": [1.3, 1.3, 1.3],
      "position": [0, -0.1, 0],
      "rotation": [0, -15, 0],
      "autoRotate": true,
      "rotationSpeed": 0.5
    },
    "effects": {
      "bloom": { "enabled": true, "intensity": 1.2 },
      "fog": { "color": "#0a0a0a", "near": 5, "far": 19 },
      "shadow": { "enabled": true, "bias": -0.0005, "mapSize": [1536, 1536], "radius": 4 }
    }
  },
  "components": {
    "button": {
      "radius": "md",
      "height": 42,
      "paddingX": "1.5rem",
      "variants": ["solid", "outline", "ghost", "neon"]
    },
    "card": {
      "radius": "lg",
      "shadow": "0 20px 50px rgba(187, 134, 252, 0.25)"
    },
    "input": { "radius": "md" },
    "badge": { "radius": "sm" }
  }
}